<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#8F000000"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/go_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_white_left_top_selector"
                android:contentDescription="回到桌面"
                android:padding="16dp"
                android:src="@drawable/click_home_selector"/>

            <ImageView
                android:id="@+id/recent_app"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_white_selector"
                android:contentDescription="最近运行APP"
                android:padding="16dp"
                android:src="@drawable/long_home_selector"/>

            <ImageView
                android:id="@+id/go_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_white_right_top_selector"
                android:contentDescription="触发回退"
                android:padding="16dp"
                android:src="@drawable/click_back_selector"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/open_notification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_white_left_bottom_selector"
                android:contentDescription="打开通知栏"
                android:padding="16dp"
                android:src="@drawable/click_notification_selector"/>

            <ImageView
                android:id="@+id/power_off"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_white_selector"
                android:contentDescription="锁屏"
                android:padding="16dp"
                android:src="@drawable/click_power_selector"/>

            <View
                android:id="@+id/open_android_setting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_white_right_bottom_selector"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
