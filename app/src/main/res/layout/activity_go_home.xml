<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    tools:context="cn.smiles.andclock.activity.GoHomeActivity">

    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:padding="12dp"
        android:text="Android开启状态"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/open_app_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/switch1"
        android:layout_below="@+id/switch1"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_white_selector"
        android:gravity="left"
        android:onClick="onClick"
        android:padding="12dp"
        android:text="打开应用权限设置页面(授予显示悬浮窗)"
        android:visibility="visible"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/switch1"
        android:layout_below="@id/open_app_setting"
        android:onClick="onClick"
        android:text="Button"
        android:visibility="gone"/>

    <cn.smiles.andclock.view.ClockView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

</RelativeLayout>
